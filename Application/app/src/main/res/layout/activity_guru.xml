<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Guru">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewSiswa"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-126dp"
        android:layout_marginEnd="82dp"
        android:paddingLeft="20dp"
        android:text="Waktu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tampilNamaGuru"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="Profil Guru"
        android:textColor="#790101"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tampilNamaGuru"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:padding="0dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tampilNip"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="38dp"
        android:gravity="left"
        android:padding="0dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tampilMapel"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="118dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="65dp"
        android:gravity="left"
        android:padding="0dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listViewSiswa"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:paddingLeft="15dp"
        android:text="Kehadiran"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView10"
        android:text="NIS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginLeft="10dp"
        android:text="Nama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tampilNip"
        android:layout_marginEnd="23dp"
        android:background="@drawable/btn_reg"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="logout"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:text="Nama    :"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tampilNip"
        android:layout_marginLeft="10dp"
        android:text="NIP        :"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tampilMapel"
        android:layout_marginLeft="10dp"
        android:text="Mata Pelajaran  :"
        android:layout_alignParentLeft="true" />

</RelativeLayout>