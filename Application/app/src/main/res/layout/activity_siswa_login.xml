<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SiswaLogin">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-20dp"
        android:paddingBottom="0dp"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/tvBuatAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMasuk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Belum Mendaftar? Daftar di sini"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginPasswordSis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_reg"
        android:text="Masuk"
        android:textColor="@android:color/background_light" />


    <EditText
        android:id="@+id/loginUnameSis"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/button_reg"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="136dp" />

    <EditText
        android:id="@+id/loginPasswordSis"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginUnameSis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_reg"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName|textPassword" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/backgroud"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Login Siswa"
        android:textColor="@android:color/background_light"
        android:textSize="22sp" />
</RelativeLayout>